{
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "build": "pnpm -r --stream build",
    "dev": "pnpm -r --parallel --stream dev",
    "lint:check": "oxlint .",
    "lint:fix": "oxlint . --fix",
    "format:check": "prettier --check .",
    "format:fix": "prettier --write .",
    "test": "pnpm -r --stream test"
  },
  "peerDependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "prettier": "^3",
    "oxlint": "1.25.0"
  },
  "engines": {
    "node": ">=22"
  },
  "packageManager": "pnpm@10.2.0"
}
